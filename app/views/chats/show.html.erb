<div class="messages">
  <% if @chat.messages.any? %>
    <div id="messages">
      <%= render partial: 'messages/message', collection: @chat.messages.order(id: :asc) %>
    </div>
  <% else %>
    <div id="messages">
    </div>
  <% end %>
</div>

<%= render 'messages/form', chat: @chat, message: @message %>

